@model Aerolinea.Models.RegistrarAvionViewModel
@using Aerolinea.Models;
@{
    ViewBag.Title = "Registar Avion";
    Logic lg = new Logic();
    Layout = lg.ObtenerLayout(lg.GetUserType());
}

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-inline" role="form">
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Detalles del Avion</legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.NumSerie, new { @class = "option" })
                    @Html.TextBoxFor(model => model.NumSerie, new { @class = "form-control", @Value = Model.NumSerie, @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.NumSerie)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Modelo, new { @class = "option" })
                    @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control", @placeholder = "Ejm: Boeing 747.." })
                    @Html.ValidationMessageFor(model => model.Modelo)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Capacidad, new { @class = "option" })
                    @Html.TextBoxFor(model => model.Capacidad, new { @class = "form-control", @placeholder = "Capacidad.." })
                    @Html.ValidationMessageFor(model => model.Capacidad)
                </div>

                <div class="form-control-static">
                    <input type="submit" class="btn btn-primary" value="Registrar" />
                </div>
            </fieldset>
        </div>
    }
</div>
