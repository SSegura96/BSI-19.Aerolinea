@model Aerolinea.Models.PaisViewModels.RegistrarPaisViewModel
@{
    ViewBag.Title = "Actualizar Pais";
    Layout = null;
}

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-inline" role="form">
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, new { @class = "option" })
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @Value = Model.Nombre, @placeHolder = "Nombre del Pias.. Ejm: ''Costa Rica''" })
            </div>

            <div class="form-control-static">
                <input type="submit" class="btn btn-primary" value="Actualizar" />
            </div>
        </div>
    }
</div>